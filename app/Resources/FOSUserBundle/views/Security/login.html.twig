{% extends "::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block body%}
    {% block headerblock %} {{ parent() }} {% endblock %}
{% block fos_user_content %}
    {% if error %}
        <p class="text-danger text-center">
            {{ error|trans }}
        </p>
    {% endif %}

    <div class="container">

        <div class="row" style="margin-top:20px">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form  role="form" action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <fieldset>
                        <h2>Please Sign In</h2>
                        <hr class="colorgraph">
                        <div class="form-group">
                            <input type="text" id="username" name="_username" class="form-control input-lg" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" required="required">
                        </div>
                        <div class="form-group">
                            <input type="password" type="password" id="password" name="_password" required="required" class="form-control input-lg" placeholder="{{ 'security.login.password'|trans }}">
                        </div>
				<span class="button-checkbox">

                     <input  type="checkbox" id="remember_me" name="_remember_me" value="on" />  {{ 'security.login.remember_me'|trans }}
					<a href="" class="btn btn-link pull-right">{{ 'security.login.forgot_password'|trans }}</a>
				</span>
                        <hr class="colorgraph">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <input type="submit" id="_submit" name="_submit" class="btn btn-lg btn-success btn-block" value="{{ 'security.login.submit'|trans }}">
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <a href="{{ path('fos_user_registration_register') }}" class="btn btn-lg btn-primary btn-block">{{ 'registration.submit'|trans }}</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
{% endblock body %}
