{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <div class="container-fluid well span6">
        <div class="row">
            <div class="col-md-2" >
                <img src="data:image/jpeg;base64," class="img-circle">
            </div>

            <div class="col-md-8">
                <h3>{{ user.username }}</h3>
                <h6>{{ 'profile.show.email'|trans }}: {{ user.email }}</h6>
            </div>

            <div class="col-md-2">
                <div class="btn-group">
                    <a class="btn dropdown-toggle btn-info" data-toggle="dropdown" href="#">
                        Action
                        <span class="icon-cog icon-white"></span><span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('fos_user_profile_edit') }}"><span class="icon-wrench"></span>Change info</a></li>
                        <li><a href="{{ path('fos_user_change_password') }}"><span class="icon-trash"></span>Change password</a></li>
                        <li><a href="{{ path('favourites') }}"><span class="icon-trash"></span>My favourite</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

